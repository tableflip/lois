<!doctype html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name=viewport content="width=device-width, initial-scale=1">
		{squarespace-headers}
		<squarespace:script src="site.js" combo="false" />
		<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/gsap/1.15.1/TweenMax.min.js"></script>
		<squarespace:script src="jquery.scrollmagic.min.js" combo="false" />
		<squarespace:script src="homepage-anim.js" combo="false" />
	</head>
	<body class="{squarespace.page-classes}" id="{squarespace.page-id}">

		<div class="splash-scene invisible">

			<div class="top-section">

				<div class="top-spacer collapsible">
					<div class="lois-blurb">
						championing London design talent<br class="hide-for-mobile-portrait">
						in our independent <br class="hide-for-mobile-portrait">
						online shop
					</div>
				</div>

				<div class="top-menu collapsible">
					<div class="slashes"><i class="icon-lois-slashes"></i></div>

					<div class="menu-items">
						<div class="left item"><a href="/shop-sections">shop</a></div>
						<div class="right item"><a href="/makers">makers</a></div>
					</div>

					<div class="surround">
						<a href="/">
							<div class="centered-button white">
								<div class="button-text">L O I S</div>
							</div>
						</a>
					</div>

				</div>

			</div>

			<div class="main-section">

				<div class="splash-image" style="background-image: url('assets/images/landing-page/homepage_header_image.jpg');"></div>

				<div class="splash-button"><div class="centered-button yellow"><div class="button-text">Shop</div></div></div>

				<div class="splash-image laurie-hands-image-tint">

					<div class="splash-social full-height">
						<div class="social-content">
							<div class="header">shop the collection</div>
						</div>
					</div>

				</div>

				<div class="splash-button"><a class="centered-button yellow" href={{pathFor route='makers'}}><div class="button-text">Made</div></a></div>

				<div class="splash-image" style="background-image: url('assets/images/landing-page/homepage_made_section.jpg');">

					<div class="splash-social full-height">
						<div class="social-content">
							<div class="header">
								watch the films
							</div>
						</div>
					</div>

				</div>

				<div class="splash-button"><div class="centered-button yellow"><div class="button-text">Fun</div></div></div>

				<div class="splash-image" style="background-image: url('assets/images/landing-page/homepage_fun_section.jpg');">

					<div class="splash-social">
						<div class="social-content">
							<div class="header">get involved</div>
							<div class="subheader">join our mailing list</div>
							<div class="social-icons">
								<i class="icon-twitter-circle"></i>
								<i class="icon-instagram-circle"></i>
							</div>
						</div>
					</div>

				</div>

				<div class="splash-legal">

					<div class="item left">
						<div>Please read our disclaimer</div>
						<div>All of this is massively copyrighted</div>
						<div>Please don't break the law in any other capacity either</div>
					</div>

					<div class="item right">
						<div>Scroll up, the bit above is much more interesting</div>
					</div>

				</div>

			</div>

		</div>

		<div class="down-arrow"><i class="icon-arrow-down" style="opacity: 0;"></i></div>

	{.if template.mobileStylesEnabled}{.or}
	  <script>
	    Y.use('node', function() {
	      Y.on('domready', function() {
	        var move;
	        Y.all('.subnav a').each(function(a) {
	          a.on('touchstart', function() {
	            move = false;
	          });
	          a.on('touchmove', function() {
	            move = true;
	          });
	          a.on('touchend', function() {
	            if (move === false) {
	              window.location = a.getAttribute('href');
	            }
	          });
	        });
	      });
	    });
	  </script>
	{.end}

	</body>
</html>
