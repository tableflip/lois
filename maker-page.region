<!doctype html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
	 	<meta name="viewport" content="width=device-width, initial-scale=1">
		{squarespace-headers}
	</head>
	<body class="{squarespace.page-classes}" id="{squarespace.page-id}">

		<div class="splash-scene">
		
			<div class="top-section">

				<div class="top-spacer">
				</div>

				<div class="top-menu ">
					<div class="slashes"><i class="icon-lois-slashes"></i></div>

					<div class="menu-items">
						<div class="left item"><a href="">shop</a></div>
						<div class="right item"><a href="/makers">makers</a></div>
					</div>

					<a href="/">
						<div class="centered-button white">
							<div class="button-text">L O I S</div>
						</div>
					</a>

				</div>

			</div>

			<main id="main" role="main" class="container top-space main-section {.section item}{.main-image?}has-img{.end}{.or}{.section collection}{.section mainImage}has-img{.end}{.end}{.end}">
				<div class="icon-section">
					<div class="maker-icon">
						<div class="avatar-container">
							<div class="avatar" style="background-color: rgba(0, 0, 0, 0);"><squarespace:block-field id="maker-avatar" columns="1" lock-layout="true"/></div>
						</div>
						<div class="name"><squarespace:block-field id="maker-name" columns="1" lock-layout="true"/></div>
					</div>
				</div>

				<div class="video-section">
					<squarespace:block-field id="maker-video" columns="1" lock-layout="true"/>
				</div>

				<div class="blurb-section">
					<p>
						<squarespace:block-field id="maker-details" columns="1" lock-layout="true"/>
					</p>
				</div>
			</main>

		</div>

	<squarespace:script src="site.js" combo="true" />

	{.if template.mobileStylesEnabled}{.or}
	  <script>
	    Y.use('node', function() {
	      Y.on('domready', function() {
	        var move;
	        Y.all('.subnav a').each(function(a) {
	          a.on('touchstart', function() {
	            move = false;
	          });
	          a.on('touchmove', function() {
	            move = true;
	          });
	          a.on('touchend', function() {
	            if (move === false) {
	              window.location = a.getAttribute('href');
	            }
	          });
	        });
	      });
	    });
	  </script>
	{.end}

	{squarespace-footers}
	</body>
</html>
